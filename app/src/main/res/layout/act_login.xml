<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:id="@+id/app_name"
            android:padding="10dp"
            android:gravity="center"
            android:drawableLeft="@drawable/u1033"
            android:textColor="#EAE542"
            android:background="@color/transparency"
            android:textSize="22sp"
            android:text="铁路客运设备运维系统"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:layout_gravity="center_vertical"
            android:background="@color/text_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_tel" />

            <EditText
                android:hint="账号"
                android:id="@+id/tel_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView7"
                android:layout_toRightOf="@+id/imageView7"
                android:background="@null"
                android:inputType="text"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:textSize="@dimen/commom_textsize" />

            <ImageView
                android:id="@+id/tel_et_clearbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tel_et"
                android:layout_alignRight="@+id/tel_et"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/clear_button"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/commom_item_line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@color/text_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_pwd" />

            <EditText
                android:hint="密码"
                android:id="@+id/pwd_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/imageView8"
                android:layout_toRightOf="@+id/imageView8"
                android:background="@null"
                android:inputType="textPassword"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="30dp"
                android:paddingTop="8dp"
                android:textSize="@dimen/commom_textsize" />

            <ImageView
                android:id="@+id/pwd_et_clearbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/pwd_et"
                android:layout_alignRight="@+id/pwd_et"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/clear_button"
                android:visibility="visible" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/deep_red_btn"
                android:text="登录"
                android:textColor="@color/text_white"
                android:textSize="@dimen/commom_textsize" />

            <Button
                android:visibility="gone"
                android:id="@+id/exit_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/deep_red_btn"
                android:text="退出"
                android:textColor="@color/text_white"
                android:textSize="@dimen/commom_textsize" />
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

